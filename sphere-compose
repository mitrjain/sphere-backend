version: '1'
services:
  sphere-db:
    image: postgres
    env_file: ./docker/env-sphere-db
    ports:
      - 5432:5432

  sphere-backend:
    build:
      context: .
      dockerfile: ./Dockerfile
    env_file: ./docker/env
    depends_on:
      - sphere-db
    ports:
      - 8000:8000

  sphere-frontend:
    build:
      context: ../sphere_frontend/micro-frontend
      dockerfile: ./Dockerfile
    depends_on:
      - sphere-backend
    ports:
      - 3000:3000